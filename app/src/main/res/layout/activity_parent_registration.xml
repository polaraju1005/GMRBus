<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logins.ParentRegistration">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/topView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@color/adminLogin" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/topView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/wave" />

        <TextView
            android:id="@+id/txtRegisterParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:layout_toStartOf="@+id/imgAdmParent"
            android:fontFamily="@font/poppins_medium"
            android:text="Register here for an account"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgAdmParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_person" />

        <TextView
            android:id="@+id/txtParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewPager"
            android:layout_centerHorizontal="true"
            android:fontFamily="cursive"
            android:text="Parent"
            android:textColor="@color/adminLogin"
            android:textSize="50sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/etParentRegName"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtParent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_baseline_person_24"
            android:drawablePadding="16dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Username"
            android:inputType="textCapCharacters"
            android:padding="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegEmail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etParentRegName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Email I'd"
            android:inputType="textEmailAddress"
            android:padding="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegMobNo"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etParentRegEmail"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="16dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegPassword"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etParentRegMobNo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegConfirmPassword"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etParentRegPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/round_border"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="16dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textStyle="bold" />

        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/btnParentRegister"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_below="@+id/etParentRegConfirmPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/gradient_button"
            android:fontFamily="@font/poppins_medium"
            android:text="REGISTER"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>


</ScrollView>