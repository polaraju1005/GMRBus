<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentRegistration">

        <ImageView
            android:id="@+id/adImgGMR"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/gmrlogo" />

        <TextView
            android:id="@+id/adTxtBuses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/poppins_medium"
            android:text="BUSES"
            android:textColor="#27408B"
            android:textSize="45sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgAdmin"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:src="@drawable/signup" />

        <TextView
            android:id="@+id/adTxtHey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/poppins_medium"
            android:text="HEY... SIGN UP !"
            android:textColor="@color/black"
            android:textSize="30sp"

            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegName"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="330dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Username"
            android:inputType="textCapCharacters"
            android:padding="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegEmail"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etParentRegName"
            android:background="@drawable/input_bg"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Email I'd"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegMobNo"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etParentRegEmail"
            android:background="@drawable/input_bg"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Mobile Number"
            android:inputType="phone"
            android:padding="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegPassword"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_bg"
            android:layout_below="@+id/etParentRegMobNo"
            android:ems="10"
            android:fontFamily="@font/poppins_medium"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etParentRegConfirmPassword"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_bg"
            android:ems="10"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/etParentRegPassword"
            android:fontFamily="@font/poppins_medium"
            android:hint="Confirm Password"
            android:inputType="textPassword
"
            android:padding="10dp"
            android:textStyle="bold" />

        <androidx.constraintlayout.utils.widget.MotionButton
            android:id="@+id/btnParentRegister"
            android:layout_width="160dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/gradient_button"
            android:fontFamily="@font/poppins_medium"
            android:text="REGISTER"
            android:layout_below="@+id/etParentRegConfirmPassword"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


</RelativeLayout>